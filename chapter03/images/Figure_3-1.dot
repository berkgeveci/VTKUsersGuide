digraph vtk_architecture {
    graph [
        rankdir=TB
        bgcolor=white
        fontname="Helvetica"
        margin=0.3
    ];
    node [
        fontname="Helvetica"
        shape=none
    ];

    subgraph cluster_outer {
        label=""
        style="filled"
        fillcolor="white"
        color="black"
        penwidth=2

        wrapper_label [
            label=<
                <TABLE BORDER="0" CELLBORDER="0" CELLSPACING="0">
                    <TR><TD><FONT POINT-SIZE="11">Language Bindings</FONT></TD></TR>
                    <TR><TD><FONT POINT-SIZE="9">(Python, Java, .NET, JavaScript)</FONT></TD></TR>
                </TABLE>
            >
        ]

        subgraph cluster_inner {
            label=""
            style="filled"
            fillcolor="lightgray"
            color="black"
            penwidth=1.5
            margin=15

            core_label [
                label=<
                    <TABLE BORDER="0" CELLBORDER="0" CELLSPACING="0">
                        <TR><TD><FONT POINT-SIZE="11">Compiled Core</FONT></TD></TR>
                        <TR><TD><FONT POINT-SIZE="9">(C++)</FONT></TD></TR>
                    </TABLE>
                >
            ]
        }

        wrapper_label -> core_label [style=invis]
    }
}
